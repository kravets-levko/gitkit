#!/bin/sh

# This file is automatically generated.
# Don't edit it until you clearly understand what you're going to do.

# spawn-fcgi variables
SPAWN_FCGI='${SPAWN_FCGI_BINARY}'
FCGIWRAP='${FCGIWRAP_BINARY}'
FCGIWRAP_OPTIONS='-f'
PIDFILE='${FCGIWRAP_PID}'

# fcgi app variables
FCGI_CHILDREN='5'
FCGI_SOCKET='${FCGIWRAP_SOCKET}'
FCGI_SOCKET_MODE='660'
FCGI_USER='${GITKIT_USER}'
FCGI_GROUP='${GITKIT_GROUP}'

# Socket owner/group
FCGI_SOCKET_OWNER='${GITKIT_USER}'
FCGI_SOCKET_GROUP='${GITKIT_GROUP}'

exec "${SPAWN_FCGI}" \
 -s "${FCGI_SOCKET}" -M "${FCGI_SOCKET_MODE}" -F "${FCGI_CHILDREN}" -P "${PIDFILE}" \
 -u "${FCGI_USER}" -g "${FCGI_GROUP}" -U "${FCGI_SOCKET_OWNER}" -G "${FCGI_SOCKET_OWNER}" \
 -- "${FCGIWRAP}" "${FCGIWRAP_OPTIONS}"
