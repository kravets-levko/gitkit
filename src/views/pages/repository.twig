{% extends 'layout/main.twig' %}

{% block title %}{{ group }}/{{ name }} - GitKit{% endblock %}

{% block content %}
  <h1>{{ group }}/{{ name }}</h1>
  <p>Clone URL: <a href="{{ repository.getCloneUrl() }}">{{ repository.getCloneUrl() }}</a></p>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th class="py-2" width="1%">Commit</th>
          <th class="py-2" width="1%">Mode</th>
          <th class="py-2">Path</th>
        </tr>
      </thead>
      <tbody>
      {% for file in repository.getFiles() %}
        <tr>
          <td class="py-2">{{ file.commit }}</td>
          <td class="py-2">{{ file.mode }}</td>
          <td class="py-2">{{ file.path }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}