{% spaceless %}
  {% set names = tree.filenames('README.*', 'README') %}
  {% if names | length > 0 %}
    {% set node = tree.node(names | first) %}
    {% if node.type == 'blob' %}
      <div class="card m-0">
        <div class="card-header">
          <span class="octicon mr-1">{% include 'assets/octicons/book.svg' %}</span>
          <span>{{ node.name }}</span>
        </div>
        <div class="card-body"><markdown class="text-block">{{ node.data }}</markdown></div>
      </div>
    {% endif %}
  {% endif %}
{% endspaceless %}
