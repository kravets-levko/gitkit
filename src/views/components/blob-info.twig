{% spaceless %}
  <table class="table m-0">
    <thead>
    <tr>
      <th class="border-0 align-middle font-weight-normal text-nowrap">
        <span class="mr-2">{{ blob.lines.total }} lines ({{ blob.lines.nonEmpty }} sloc)</span>
        <span title="{{ blob.info.size }} byte(s)">{{ blob.info.size | format_bytes }}</span>
      </th>
      <th class="border-0 align-middle font-weight-normal text-right">
        <a href="{{ base }}/{{ blob.type }}/{{ ref.name }}:{{ blob.path }}?raw" class="form-control no-hover d-inline-block w-auto">Raw</a>
      </th>
    </tr>
    </thead>
  </table>
{% endspaceless %}
